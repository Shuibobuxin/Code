/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.content {
  display: flex;
  flex-direction: column;
  font-family: 宋体;
  box-sizing: border-box;
  color: #4b6063;
  font-size: 16px;
}

/*当天天气信息*/

.info {
  width: 100%;
}

/*城市名称*/

.city {
  font-size: 45px;
  color: #000203;
  margin-top: 20px;
}
.today{
  font-size: 20px;
}

/*当天温度*/

.temp {
  font-size: 180rpx;
  line-height: 130rpx;
  text-align: center;
  color: #41709e;
  margin-top: 30px;
  margin-bottom: 20px;
}

/*感冒描述*/

.weather {
  line-height: 22px;
  margin: 5px 0;
  padding: 10px 5px;
  color: #d69142;
}

/*昨天天气信息*/

.yesterday {
  width: 93%;
  padding: 10rpx;
  margin-top: 30rpx;
  border-radius: 10rpx;
}

/*昨天的*/

.yesterday-title {
  color: red;
  font-size: 25px;
}

/*最近五天天气信息*/

.forecast {
  width: 100%;
  display: flex;
  margin-top: 30rpx;
  align-self: flex-end;
}

/*每一天的天气信息*/

.next-day {
  width: 20%;
  height: 400rpx;
  text-align: center;
  line-height: 30px;
  font-size: 14px;
  margin: 0 3rpx;
  border-radius: 10rpx;
}

/*日期*/

.date {
  margin-bottom: 20rpx;
  border-bottom: 1px solid #043567;
  color: #c95a6b;

}

/*搜索区域*/

.search-area {
  display: flex;
  padding: 1rem 0.5rem;
}

/*搜索区域的输入框*/

.search-area input {
  width: 70%;
  height: 38px;
  line-height: 38px;
  border-bottom: 1px solid #043567;
  box-shadow: inset 0 0 0 #ccc;
  color: #000;
  border-bottom-right-radius: 2px,#043567;
}

/*搜索区的按钮*/

.search-area button {
  width: 30%;
  height: 40px;
  line-height: 40px;
  margin-left: 5px;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.bt{
  background-image: icons/1112.png;
}